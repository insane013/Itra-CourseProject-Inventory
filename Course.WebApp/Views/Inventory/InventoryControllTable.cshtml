@using Course.Core
@using Course.Models.Inventory
@using System.Security.Claims
@model PaginatedResult<InventoryCommonView>

@{
    List<InventoryCommonView>? inventories = Model.Items.ToList();

    var email = User.FindFirstValue(ClaimTypes.Email);
}

<form id="usersForm" method="post">
    @await Html.PartialAsync("_TableToolBar", email)
    <div class="container mt-4">
        <h3 class="mb-3">Inventories</h3>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">
                            <input class="form-check-input" type="checkbox" id="checkAll" />
                        </th>
                        <th style="width: 120px;">Image</th>
                        <th style="width: 20%;">Title</th>
                        <th style="width: 40%;">Description</th>
                        <th style="width: 20%;">Creator</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inventory in inventories)
                    {
                        @await Html.PartialAsync("_InventoryTableViewItem", inventory)
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>